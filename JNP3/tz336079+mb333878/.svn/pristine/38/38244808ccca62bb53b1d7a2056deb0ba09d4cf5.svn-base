#include "kontroler.h"

using std::ostream;

Kontroler::operator bool() const {
	return *_status == Status::OK;
}

ostream& operator<<(ostream& output, const Kontroler& k) {
	switch (*k._status) {
		case Status::OK:
			output << "OK\n";
			break;
		case Status::MODIFIED:
			output << "ALARM: ZMANIPULOWANY\n";
			break;
		case Status::ALERT:
			output << "ALARM: WŁAMANIE\n";
			break;
	}
	return output;
}

Kontroler::Kontroler(Status* status) : _status(status) {}


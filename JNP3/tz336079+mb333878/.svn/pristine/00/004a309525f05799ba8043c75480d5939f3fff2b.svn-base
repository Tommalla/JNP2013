#ifndef SEJF_H
#define SEJF_H

#include <string>
#include "kontroler.h"

class Kontroler;

class Sejf
{
public:
	friend class Kontroler;

	Sejf(const char* text, int numOfAttempts = 42)
		: _text(text)
		, _numOfAttempts(numOfAttempts)
		, _kontroler(&_status)
		{
			if (_numOfAttempts < 0)
				_numOfAttempts = 0;
		}
	Sejf(Sejf&& other);

public:
	short int operator[](const int idx);
	Sejf& operator+=(const int val);
	Sejf& operator-=(const int val);
	Sejf& operator*=(const int val);
	Sejf& operator=(Sejf&& other);
	const Kontroler& kontroler();

private:
	std::string _text;
	int _numOfAttempts;
	mutable Status _status;
	const Kontroler _kontroler;

	void move(Sejf&& other);
	void setAlert() const;
	void setModified() const;
};

#endif // SEJF_H

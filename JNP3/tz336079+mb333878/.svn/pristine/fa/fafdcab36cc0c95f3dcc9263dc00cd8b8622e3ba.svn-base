#ifndef KONTROLER_H
#define KONTROLER_H
#include <ostream>

enum class Status {
	OK,
	MODIFIED,
	ALERT
};

class Kontroler {
	public:
		friend class Sejf;
		friend std::ostream& operator<<(std::ostream& output, const Kontroler& k);

		explicit operator bool() const;
		Kontroler(const Kontroler& other): _status(other._status) {};
	private:
		const Status* _status;

		Kontroler(Status* status);
};

#endif
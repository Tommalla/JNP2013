#include "sejf.h"

Sejf::Sejf(Sejf&& other)
{
	move(std::move(other));
}

short int Sejf::operator[](const int idx)
{
	if (idx < 0 || idx >= _text.size() || _numOfAttempts == 0)
		return -1;
	
	_numOfAttempts--;
	return (short int)_text[idx];
}

Sejf& Sejf::operator+=(const int val)
{
	if (val > 0)
		_numOfAttempts += val;
	return *this;
}

Sejf& Sejf::operator*=(const int val)
{
	if (val > 0)
		_numOfAttempts *= val;
	return *this;
}

Sejf& Sejf::operator-=(const int val)
{
	if (val > 0 && _numOfAttempts >= val)
		_numOfAttempts -= val;
	return *this;
}

Sejf& Sejf::operator=(Sejf&& other)
{
	move(std::move(other));
	return *this;
}

void Sejf::move(Sejf&& other)
{
	_text = other._text;
	_numOfAttempts = other._numOfAttempts;
	other._text = "";
	other._numOfAttempts = 0;
}









#ifndef SEJF_H
#define SEJF_H

#include <string>

class Sejf
{
public:
	Sejf(const char* text, int numOfAttempts = 42) 
		: _text(text)
		, _numOfAttempts(numOfAttempts)
		{
			if (_numOfAttempts < 0)
				_numOfAttempts = 0;
		}
	Sejf(Sejf&& other);
	
public:
	short int operator[](const int idx);
	Sejf& operator+=(const int val);
	Sejf& operator-=(const int val);
	Sejf& operator*=(const int val);
	Sejf& operator=(Sejf&& other);
	
private:
	std::string _text;
	int _numOfAttempts;
	
	void move(Sejf&& other);
};

#endif // SEJF_H
